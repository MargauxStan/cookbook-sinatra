<% @recipes.each_with_index do |recipe, index| %>
  <li>
    <%= recipe.name %>
    <%= recipe.description %>
    <%= recipe.rating %>
    <%= recipe.duration %>
  </li>
 <a data-method="delete" href=<%="delete/#{index}"%>>delete</a>
<% end %>
<div>
  <a id="new_recipe" href='new'>New recipe</a>
</div>
<div>
  <p>Pick a recipe on Marmiton</p>
  <form action="/scrape" method="post" >
    <div>
      <label for="ingredient">Enter an ingredient </label>
      <input type="text" name="ingredient" id="ingredient" required>
    </div>
    <div>
       <input type="submit" value="Send!">
    </div> 
  </form>
</div>